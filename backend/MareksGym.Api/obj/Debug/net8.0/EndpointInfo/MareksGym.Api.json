        "additionalProperties": false
      },
      "CalculateMacrosResponse": {
        "type": "object",
        "properties": {
          "bmr": {
            "type": "number",
            "format": "double"
          },
          "tdee": {
            "type": "number",
            "format": "double"
          },
          "targetCalories": {
            "type": "number",
            "format": "double"
          },
          "proteinGrams": {
            "type": "number",
            "format": "double"
          },
          "carbsGrams": {
            "type": "number",
            "format": "double"
