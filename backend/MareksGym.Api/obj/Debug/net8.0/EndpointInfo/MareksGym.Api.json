                "schema": {
                  "$ref": "#/components/schemas/CalculateMacrosResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculateMacrosResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculateMacrosResponse"
                }
              }
            }
          }
        }
      }
