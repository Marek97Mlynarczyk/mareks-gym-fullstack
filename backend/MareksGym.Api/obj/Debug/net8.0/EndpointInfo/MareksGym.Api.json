            "nullable": true
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "heightCm": {
            "type": "integer",
            "format": "int32"
          },
          "weightKg": {
            "type": "number",
            "format": "double"
          },
          "activityLevel": {
            "type": "string",
